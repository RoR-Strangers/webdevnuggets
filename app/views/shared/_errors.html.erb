<% if obj.errors.any? %>
  <div class="row">
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h2 class="panel-title">
          <%= pluralize(obj.errors.count, "error") %>
          prohibited this article from being saved:
        </h2>
        <div class="panel-body">
          <u1>
            <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </u1>
        </div>
      </div>
    </div>
  </div>
<% end %>
